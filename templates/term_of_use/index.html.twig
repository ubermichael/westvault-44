{% extends 'base.html.twig' %}

{% block title %}TermOfUse List{% endblock %}

{% block pageheader %}
    <h1>TermOfUse List</h1>
    <p class="count">
        Displaying {{ termOfUses|length }} termOfUses of {{ termOfUses.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('termofuse_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Weight</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            {% for termOfUse in termOfUses %}
                <tr>
                    <td>
                        {{ termOfUse.weight }}
                    </td>
                    <td>
                        {{ termOfUse.content }}
                        <br/>
                        <a href="{{ path('termofuse_show', { 'id': termOfUse.id }) }}">
                            {{ termOfUse.keyCode }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(termOfUses) }}
    </div>

{% endblock %}
