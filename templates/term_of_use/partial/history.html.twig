<h2>History</h2>
{% for item in history %}
    <div>
        <p><b>{{ item.action }}</b> by {{ item.user }} on {{ item.created|date }}.</p>
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Before</th>
                    <th>After</th>
                </tr>
            </thead>
            {% for key,data in item.changeset %}
                {% if key not in ['id', 'created', 'updated'] %}
                    <tr>
                        <th>{{ key }}</th>
                        <td>{{ data[0] }}</td>
                        <td>{{ data[1] }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
    </div>
{% endfor %}
