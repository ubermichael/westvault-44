<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Deposit Uuid</th>
            <th>Institution</th>
            <th>Received</th>
            <th>Action</th>
            <th>Size</th>
            <th>State</th>
        </tr>
    </thead>
    <tbody>
        {% for deposit in deposits %}
            <tr>
                <td>
                    <a href="{{ path('deposit_show', { 'id': deposit.id }) }}">
                        {{ deposit.depositUuid }}
                    </a>
                </td>
                <td>
                    {{ deposit.institution }}
                </td>
                <td>
                    {% if deposit.received %}{{ deposit.received|date }}{% endif %}
                </td>

                <td>
                    {{ deposit.action }}
                </td>
                <td>
                    {{ deposit.size }}
                </td>

                <td>
                    {{ deposit.state }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
