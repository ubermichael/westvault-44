{% extends 'base.html.twig' %}

{% block title %}Deposit List{% endblock %}

{% block pageheader %}
    <h1>Deposit List</h1>
    <p class="count">
        Displaying {{ deposits|length }} deposits of {{ deposits.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('deposit_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'deposit/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(deposits) }}
    </div>

{% endblock %}
