{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block pageheader %} 
    <h1>Document Details</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('document_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('document_edit', { 'id': document.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('document_delete', { 'id': document.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Document?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ document.path }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ document.summary }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ document.content }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if document.created %}{{ document.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if document.updated %}{{ document.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
