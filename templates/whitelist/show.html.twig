{% extends 'base.html.twig' %}

{% block title %}Whitelist{% endblock %}

{% block pageheader %}
    <h1>Whitelist Details</h1>
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('whitelist_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('whitelist_edit', { 'id': whitelist.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('whitelist_delete', { 'id': whitelist.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Whitelist?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ whitelist.uuid }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ whitelist.comment }}</td>
            </tr>
            <tr>
                <th>Journal</th>
                <td>
                    {% if journal %}
                        <a href='{{ path('journal_show', {'id': journal.id}) }}'>
                            {{ journal }}
                        </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if whitelist.created %}{{ whitelist.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if whitelist.updated %}{{ whitelist.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
