{% extends 'base.html.twig' %}

{% block title %}Deposit List{% endblock %}

{% block pageheader %}
    <h1>Deposit List</h1>
    <p class="count">
        Displaying {{ deposits|length }} deposits in state <i>{{ state }}</i> of {{ deposits.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-2">
            <div class='panel panel-default'>
                <div class='panel-heading'>
                    <h3 class='panel-title'>Deposit Statuses</h3>
                </div>
                <div class='panel-body'>
                    <ul class='list-group'>
                        {% for status in states %}
                            <li class='list-group-item'>
                                <a href="{{ path('deposit_browse', {'state': status.state}) }}">{{ status.state }}</a> <span class='badge'>{{status.ct}}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-10">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Deposit Uuid</th>
                        <th>Received</th>
                    </tr>
                </thead>
                <tbody>
                    {% for deposit in deposits %}
                        <tr>
                            <td>
                                <a href="{{ path('deposit_show', { 'id': deposit.id, 'journalId': deposit.journal.id }) }}">
                                    {{ deposit.depositUuid }}
                                </a>
                            </td>
                            <td>{% if deposit.received %}{{ deposit.received|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="navigation">
                {{ knp_pagination_render(deposits) }}
            </div>
        </div>
    </div>

{% endblock %}
