{% extends 'base.html.twig' %}

{% block title %}Blacklist{% endblock %}

 {% block pageheader %}
    <h1>Blacklist Details</h1>
 {% endblock %}

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('blacklist_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('blacklist_edit', { 'id': blacklist.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('blacklist_delete', { 'id': blacklist.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Blacklist?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Uuid</th>
                <td>{{ blacklist.uuid }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ blacklist.comment }}</td>
            </tr>
            <tr>
                <th>Journal</th>
                <td>
                    {% if journal %}
                        <a href='{{ path('journal_show', {'id': journal.id}) }}'>
                            {{ journal }}
                        </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if blacklist.created %}{{ blacklist.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if blacklist.updated %}{{ blacklist.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
