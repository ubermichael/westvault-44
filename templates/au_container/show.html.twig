{% extends 'base.html.twig' %}


{% block pageheader %}
    <h1>AuContainer</h1>
{% endblock %}

{% block body -%}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('aucontainer') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Deposits</th>
                <td>{{ entity.countDeposits() }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ entity.getSize() }}kb</td>
            </tr>
        </tbody>
    </table>

    <h2>Deposits</h2>
    {% if entity.deposits|length %}
        <ol>
        {% for deposit in entity.deposits %}
            <li><a class='uuid' href="{{ path('deposit_show', {'journalId': deposit.journal.id, 'id': deposit.id}) }}">{{ deposit.depositUuid}}</a></li>
        {% endfor %}
        <ol>
    {% else %}
        <p>None</p>
    {% endif %}

{% endblock %}
